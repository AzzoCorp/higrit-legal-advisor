 <% loggedin %>
 
<div class="main-container">
<div class="container">
<div class="row">
<div class="col-md-8 page-content">
<div class="inner-box category-content">
<h2 class="title-2"> <i class="icon-user-add"></i> Create your account, Its free </h2>
<div class="row">
<div class="col-sm-12">
<fieldset>

<!--
<pre>
  <% params.each do |key,value| %>
      <%= key %> ==> <%= value  %>
      <% end %>
</pre>
-->

<%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>


  <div class="form-group required">
    <%= f.label :name, class: 'col-md-4 control-label' %>
    <div class="col-md-6">
      <%= f.text_field :name, class: 'form-control input-md',placeholder: 'Name' %>
    </div>
  </div>

  <div class="form-group required">
    <%= f.label :mobile, class: 'col-md-4 control-label' %>
    <div class="col-md-6">
      <%= f.text_field :mobile, class: 'form-control input-md',placeholder: 'Mobile' %>
    </div>
  </div>

  <div class="form-group required">
    <%= f.label :email, class: 'col-md-4 control-label' %>
    <div class="col-md-6">
      <%= f.text_field :email, class: 'form-control input-md',placeholder: 'Email' %>
    </div>
  </div>


  <div class="form-group required">
    <%= f.label :password, class: 'col-md-4 control-label' %>
    <div class="col-md-6">
      <%= f.password_field :password, class: 'form-control',placeholder: 'Password' %>
      <p class="help-block">At least 5 characters  </p>
    </div>
  </div>
  
  <div class="form-group">
  <label class="col-md-4 control-label">Gender</label>
  <div class="col-md-6">

  <%= f.radio_button :gender, 'male', :checked => true %>
  <%= f.label :male %>
  <%= f.radio_button :gender, 'female'%>
  <%= f.label :female %>

  </div>
  </div>
   


<div class="form-group">
<label class="col-md-4 control-label"></label>
<div class="col-md-8">
<div class="termbox mb10">
<label class="checkbox-inline" for="checkboxes-1">
<input name="checkboxes" id="checkboxes-1" value="1" type="checkbox">
I have read and agree to the <a href="#">Terms &amp; Conditions</a> </label>
</div>

<div style="clear:both"></div>
     <%= f.submit 'Signup', class: 'btn btn-primary' %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li style='color:red'>*<%=message%>  </li>
      <% end %>
    </ul> 

  <% end %>
     
</div>


<% end %>



 





</fieldset>
</div>
</div>
</div>
</div>
 
